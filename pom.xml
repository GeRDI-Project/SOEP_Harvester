<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>de.gerdi-project</groupId>
        <artifactId>GeRDI-parent-harvester</artifactId>
        <version>6.8.3-SNAPSHOT</version>
    </parent>

    <artifactId>SOEP-Harvester</artifactId>
    <packaging>war</packaging>
    <version>6.8.3-SNAPSHOT</version>
    <name>SOEP Harvester Service</name>
    <description>A harvester service for retrieving data from: https://github.com/paneldata/soep-core/</description>
    <inceptionYear>2017</inceptionYear>
    <properties>
        <jgit.dependency.version>4.8.0.201706111038-r</jgit.dependency.version>
    </properties>

    <developers>
        <developer>
            <name>Fidan Limani</name>
            <email>f.limani@zbw.eu</email>
            <organization>ZBW</organization>
            <organizationUrl>https://www.zbw.eu</organizationUrl>
        </developer>
    </developers>

    <scm>
        <connection>scm:git:git://scm:git:git://https://code.gerdi-project.de/scm/har/soep.git</connection>
        <developerConnection>scm:git:ssh://https://code.gerdi-project.de/scm/har/soep.git</developerConnection>
        <url>https://code.gerdi-project.de/projects/HAR/repos/soep/browse</url>
    </scm>

    <dependencies>
        <!-- JGit: https://mvnrepository.com/artifact/org.eclipse.jgit/org.eclipse.jgit -->
        <dependency>
            <groupId>org.eclipse.jgit</groupId>
            <artifactId>org.eclipse.jgit</artifactId>
            <version>${jgit.dependency.version}</version>
        </dependency>

        <!-- https://mvnrepository.com/artifact/com.opencsv/opencsv -->
        <dependency>
            <groupId>com.opencsv</groupId>
            <artifactId>opencsv</artifactId>
            <version>4.0</version>
        </dependency>

    </dependencies>

    <!-- Define Sonatype repository for retrieving SNAPSHOT versions -->
    <repositories>
        <repository>
            <id>Sonatype</id>
            <url>https://oss.sonatype.org/content/repositories/snapshots/</url>
        </repository>
    </repositories>

</project>